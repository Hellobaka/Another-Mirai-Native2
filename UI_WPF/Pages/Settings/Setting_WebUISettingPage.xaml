<Page
    x:Class="Another_Mirai_Native.UI.Pages.Setting_WebUISettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Another_Mirai_Native.UI.Controls"
    xmlns:converters="clr-namespace:Another_Mirai_Native.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Another_Mirai_Native.UI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Setting_UISettingPage"
    d:DataContext="{d:DesignInstance Type=local:Setting_WebUISettingPage}"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:EnumToItemsSourceConverter x:Key="EnumToItemsSourceConverter" />
        <converters:EnumDescriptionConverter x:Key="EnumDescriptionConverter" />
    </Page.Resources>
    <ui:SimpleStackPanel Margin="10,10,20,0" Spacing="10">
        <StackPanel>
            <Border
                Margin="0,0,0,10"
                Padding="10"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <ui:SimpleStackPanel Spacing="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Style="{StaticResource TitleTextBlockStyle}">
                        🛜 通用设置
                    </TextBlock>
                    <controls:SettingItem_TextBox
                        x:Name="ListenIP"
                        Title="监听 IP"
                        DataChanged="SettingItem_TextBox_DataChanged"
                        Subtitle="WebUI 监听的IP。任意 IPv4 或 IPv6 可以填 *" />
                    <controls:SettingItem_TextBox
                        x:Name="ListenPort"
                        Title="监听端口"
                        DataChanged="SettingItem_TextBox_DataChanged" />
                    <controls:SettingItem_TextBox
                        x:Name="Password"
                        Title="登录密码"
                        DataChanged="SettingItem_TextBox_DataChanged" />
                </ui:SimpleStackPanel>
            </Border>

            <Border
                Margin="0,0,0,10"
                Padding="10"
                Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                BorderBrush="{DynamicResource SystemControlBackgroundChromeMediumLowBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <ui:SimpleStackPanel Spacing="10">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontSize="16"
                        FontWeight="SemiBold"
                        Style="{StaticResource TitleTextBlockStyle}">
                        🔒 HTTPS 设置
                    </TextBlock>
                    <controls:SettingItem_ToggleButton
                        x:Name="EnableHTTPS"
                        Title="启用 HTTPS"
                        OnToggled="SettingItem_Toggled"
                        Subtitle="启用 HTTPS 加密连接" />
                    <controls:SettingItem_TextBox
                        x:Name="CertificatePath"
                        Title="证书路径"
                        DataChanged="SettingItem_TextBox_DataChanged"
                        Subtitle="SSL/TLS 证书文件路径（.crt 或 .pem）" />
                    <controls:SettingItem_TextBox
                        x:Name="CertificateKeyPath"
                        Title="证书密钥路径"
                        DataChanged="SettingItem_TextBox_DataChanged"
                        Subtitle="SSL/TLS 证书私钥文件路径（.key 或 .pem）" />
                </ui:SimpleStackPanel>
            </Border>
        </StackPanel>
    </ui:SimpleStackPanel>
</Page>
<ContentControl
    x:Class="Another_Mirai_Native.UI.Controls.SettingItem_ToggleButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Another_Mirai_Native.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    mc:Ignorable="d">
    <ContentControl.Resources>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
        <local:SubTitleToVerticalAlignmentConverter x:Key="SubTitleToVerticalAlignmentConverter" />
    </ContentControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid x:Name="TextPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock
                x:Name="TitleTextBlock"
                Grid.Row="0"
                VerticalAlignment="Center"
                FontWeight="Medium"
                Style="{StaticResource BaseTextBlockStyle}"
                Text="{Binding Title, RelativeSource={RelativeSource AncestorType=ContentControl}}" />
            <TextBlock
                x:Name="SubTitleTextBlock"
                Grid.Row="1"
                Margin="0,2,0,0"
                Foreground="{DynamicResource SystemControlDisabledChromeDisabledLowBrush}"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{Binding Subtitle, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                Visibility="{Binding Subtitle, RelativeSource={RelativeSource AncestorType=ContentControl}, Converter={StaticResource StringToVisibilityConverter}}" />
        </Grid>
        <ui:ToggleSwitch
            x:Name="Selector"
            Grid.Column="1"
            Width="40"
            HorizontalAlignment="Right"
            IsOn="{Binding Toggled, RelativeSource={RelativeSource AncestorType=ContentControl}, Mode=TwoWay}"
            OffContent=""
            OnContent=""
            Toggled="ToggleSwitch_Toggled" />
    </Grid>
</ContentControl>

<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="Another_Mirai_Native.UI.Controls.Chat.MessageItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:Another_Mirai_Native.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Another_Mirai_Native.UI.Controls.Chat"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns:viewmodel="clr-namespace:Another_Mirai_Native.UI.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:MessageViewModel}"
    d:DesignHeight="250"
    d:DesignWidth="430"
    Loaded="UserControl_Loaded"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Converters:BoolVisibilityConverter x:Key="BoolVisibilityConverter" />
        <Converters:DisplayTimeConverter x:Key="DisplayTimeConverter" />
        <Converters:DetailHorizontalAlignmentConverter x:Key="DetailHorizontalAlignmentConverter" />
        <Converters:MessageStatusToSendingVisibilityConverter x:Key="MessageStatusToSendingVisibilityConverter" />
        <Converters:MessageStatusToSentVisibilityConverter x:Key="MessageStatusToSentVisibilityConverter" />
        <Converters:MessageStatusToSendFailedVisibilityConverter x:Key="MessageStatusToSendFailedVisibilityConverter" />
    </UserControl.Resources>
    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <!--  左侧头像（Receive 消息）  -->
        <local:ChatAvatar
            x:Name="AvatarLeft"
            Grid.Column="0"
            Width="40"
            Height="40"
            Margin="10,0,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            IsRound="True"
            Visibility="Collapsed">
            <local:ChatAvatar.ContextMenu>
                <StaticResource ResourceKey="AvatarContextMenu" />
            </local:ChatAvatar.ContextMenu>
        </local:ChatAvatar>

        <!--  消息内容容器  -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <!--  检查如何承载Notice类型的消息  -->
            <!--  名称显示  -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="NameDisplay"
                    HorizontalAlignment="{Binding AvatarType, Converter={StaticResource DetailHorizontalAlignmentConverter}}"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="{Binding DisplayName}"
                    TextTrimming="CharacterEllipsis" />
            </Grid>

            <!--  详细消息边框（文本消息）  -->
            <Border
                x:Name="DetailBorder"
                Grid.Row="1"
                MinHeight="38"
                Margin="0,5,10,0"
                HorizontalAlignment="Left"
                Background="{DynamicResource SystemControlTransientBorderBrush}"
                CornerRadius="10">
                <Border.ContextMenu>
                    <StaticResource ResourceKey="MessageContextMenu" />
                </Border.ContextMenu>
                <RichTextBox
                    x:Name="DetailContainer"
                    Padding="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    HorizontalScrollBarVisibility="Disabled"
                    IsDocumentEnabled="True"
                    IsReadOnly="True"
                    VerticalScrollBarVisibility="Disabled" />
            </Border>

            <!--  图片显示边框  -->
            <Border
                x:Name="ImageBorder"
                Grid.Row="1"
                Margin="0,5,10,0"
                HorizontalAlignment="Stretch"
                ClipToBounds="True"
                CornerRadius="10"
                Visibility="Collapsed">
                <StackPanel x:Name="ImageDisplay" HorizontalAlignment="Stretch" />
                <Border.ContextMenu>
                    <StaticResource ResourceKey="MessageContextMenu" />
                </Border.ContextMenu>
            </Border>

            <!--  时间和状态显示  -->
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="{Binding AvatarType, Converter={StaticResource DetailHorizontalAlignmentConverter}}"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,5,5,0"
                    VerticalAlignment="Center"
                    FontSize="10"
                    Visibility="{Binding Recalled, Converter={StaticResource BoolVisibilityConverter}}">
                    已撤回
                </TextBlock>
                <TextBlock
                    Margin="0,5,0,0"
                    VerticalAlignment="Center"
                    FontSize="10"
                    Text="{Binding Time, Converter={StaticResource DisplayTimeConverter}}" />
            </StackPanel>
        </Grid>

        <!--  右侧头像（Send 消息）  -->
        <local:ChatAvatar
            x:Name="AvatarRight"
            Grid.Column="2"
            Width="40"
            Height="40"
            Margin="10,0,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            IsRound="True"
            Visibility="Collapsed">
            <local:ChatAvatar.ContextMenu>
                <StaticResource ResourceKey="AvatarContextMenu" />
            </local:ChatAvatar.ContextMenu>
        </local:ChatAvatar>

        <!--  发送状态指示（仅 Send 消息显示）  -->
        <ui:ProgressRing
            Grid.Column="0"
            Cursor=""
            IsActive="True"
            Visibility="{Binding MessageStatus, Converter={StaticResource MessageStatusToSendingVisibilityConverter}}" />

        <!--  重新发送按钮（仅 Send 消息显示）  -->
        <ui:FontIcon
            Grid.Column="0"
            Width="16"
            Height="16"
            Margin="0,5"
            Cursor="Hand"
            FontSize="16"
            Foreground="Red"
            Glyph="&#xE72C;"
            MouseDown="ResendClick_MouseDown"
            Visibility="{Binding MessageStatus, Converter={StaticResource MessageStatusToSendFailedVisibilityConverter}}" />
    </Grid>
</UserControl>

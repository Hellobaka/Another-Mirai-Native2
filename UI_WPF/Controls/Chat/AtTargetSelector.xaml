<UserControl
    x:Class="Another_Mirai_Native.UI.Controls.Chat.AtTargetSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:Another_Mirai_Native.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Another_Mirai_Native.UI.Controls.Chat"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Width="367"
    Height="352"
    Padding="10"
    d:DataContext="{d:DesignInstance Type=local:AtTargetSelector}"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Converters:AtTargetNameConverter x:Key="AtTargetNameConverter" />
        <Converters:BoolVisibilityConverter x:Key="BoolVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox x:Name="SearchBox" TextChanged="SearchBox_TextChanged" />
        <ui:ProgressRing
            Grid.Row="1"
            Width="80"
            Height="80"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="{Binding Loading, Converter={StaticResource BoolVisibilityConverter}}" />
        <ScrollViewer Grid.Row="1" Visibility="{Binding Loading, Converter={StaticResource BoolVisibilityConverter}}">
            <ListBox
                x:Name="ItemContainer"
                Margin="0,5,0,0"
                ItemsSource="{Binding FilterList}"
                ScrollViewer.CanContentScroll="True"
                SelectionChanged="ListBox_SelectionChanged"
                VirtualizingStackPanel.IsVirtualizing="True"
                VirtualizingStackPanel.VirtualizationMode="Recycling">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <local:ChatAvatar
                                Width="10"
                                Height="10"
                                IsRound="True"
                                Item="{Binding}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                Text="{Binding Converter={StaticResource AtTargetNameConverter}, Mode=OneWay}" />
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>

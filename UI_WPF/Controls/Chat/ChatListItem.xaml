<UserControl
    x:Class="Another_Mirai_Native.UI.Controls.Chat.ChatListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:Another_Mirai_Native.UI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Another_Mirai_Native.UI.Controls.Chat"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Another_Mirai_Native.UI.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:ChatListItemViewModel}"
    d:DesignHeight="50"
    d:DesignWidth="230"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Converters:DisplayTimeConverter x:Key="DisplayTimeConverter" />
        <Converters:BoolVisibilityConverter x:Key="BoolVisibilityConverter" />
    </UserControl.Resources>
    <UserControl.ContextMenu>
        <StaticResource ResourceKey="ChatListContextMenu" />
    </UserControl.ContextMenu>
    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <local:ChatAvatar
            Width="40"
            Height="40"
            Margin="10,0,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            IsRound="True"
            Item="{Binding}" />
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="GroupDisplay"
                    VerticalAlignment="Center"
                    FontSize="16"
                    Text="{Binding GroupName}"
                    TextTrimming="CharacterEllipsis" />
                <TextBlock
                    x:Name="TimeDisplay"
                    Grid.Column="1"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="{Binding Time, Converter={StaticResource DisplayTimeConverter}}" />
            </Grid>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    x:Name="DetailDisplay"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="{Binding Detail}"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="NoWrap" />
                <Border
                    x:Name="UnreadTip"
                    Grid.Column="1"
                    Height="15"
                    MinWidth="15"
                    Margin="0,0,10,0"
                    Padding="4,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Background="{DynamicResource SystemAccentColorLight3Brush}"
                    CornerRadius="8"
                    Cursor="Hand"
                    MouseDown="UnreadTip_MouseDown"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    Visibility="{Binding UnreadBadgeVisible, Converter={StaticResource BoolVisibilityConverter}}">
                    <TextBlock
                        x:Name="UnreadCountDisplay"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Foreground="Black"
                        Text="{Binding UnreadCount}"
                        TextAlignment="Center" />
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

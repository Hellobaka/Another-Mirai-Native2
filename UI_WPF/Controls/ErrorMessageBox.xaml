<ui:ContentDialog
    x:Class="Another_Mirai_Native.UI.Controls.SimpleMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Another_Mirai_Native.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="异常捕获"
    d:DataContext="{d:DesignInstance Type=local:SimpleMessageBox}"
    CloseButtonStyle="{StaticResource ErrorButtonStyle}"
    CloseButtonText="退出框架"
    DefaultButton="Primary"
    Loaded="ContentDialog_Loaded"
    PrimaryButtonText="忽略"
    SecondaryButtonText="重载插件"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Margin="0,5"
            Text="{Binding ErrorHint}"
            TextWrapping="Wrap" />
        <TextBlock
            Grid.Row="1"
            Margin="0,5"
            Text="{Binding ErrorMessage}"
            TextWrapping="Wrap" />
        <Expander
            x:Name="DetailExpander"
            Grid.Row="2"
            Header="详细错误内容">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Button
                        x:Name="CopyDetail"
                        Grid.Row="0"
                        Margin="0,5"
                        HorizontalAlignment="Stretch"
                        Click="CopyDetail_Click"
                        Content="复制详细信息"
                        Style="{StaticResource AccentButtonStyle}">
                        <ui:FlyoutService.Flyout>
                            <ui:Flyout x:Name="ButtonFlyout">
                                <StackPanel>
                                    <TextBlock Margin="5" Text="{Binding CopyMessage}" />
                                </StackPanel>
                            </ui:Flyout>
                        </ui:FlyoutService.Flyout>
                    </Button>
                    <local:SelectableTextBlock
                        Grid.Row="1"
                        Text="{Binding ErrorDetail}"
                        TextWrapping="Wrap" />
                </Grid>
            </ScrollViewer>
        </Expander>
    </Grid>
</ui:ContentDialog>